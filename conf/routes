# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
 
# Home page
# GET        /                    controllers.Application.index
# GET        /cleanup             controllers.Application.cleanup
 
#QuestionController
GET        /api/question        controllers.QuestionController.index
GET        /api/question/random/1 controllers.QuestionController.get_random_question
GET        /api/question/:id      controllers.QuestionController.read(id: String)
POST       /api/question          controllers.QuestionController.create
GET        /api/question_form     controllers.QuestionController.form
GET        /api/question/with_tag:tag   controllers.QuestionController.get_question_with_tag_id(tag: String)
GET        /api/question/with_difficulty:difficulty   controllers.QuestionController.get_difficult_questions(difficulty: String)
GET        /api/question/with_rate:rate   controllers.QuestionController.get_rate_of_questions(rate: String)
POST       /api/question          controllers.QuestionController.submit_question
DELETE     /api/question/:id      controllers.QuestionController.delete(id: String)
PATCH      /api/question/:id      controllers.QuestionController.update(id: String)
